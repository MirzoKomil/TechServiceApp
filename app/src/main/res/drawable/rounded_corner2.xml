<!-- rounded_corner.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners -->
    <item>
        <shape>
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp"/> <!-- Adjust the radius as needed -->
            <solid android:color="@android:color/white" /> <!-- Set the background color -->
        </shape>
    </item>
    <!-- Border stroke -->
    <item android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp">
        <shape>
            <corners android:radius="18dp"/>
            <solid android:color="@android:color/transparent" /> <!-- Transparent fill -->
            <stroke
                android:width="2dp"
            android:color="@android:color/darker_gray" />
        </shape>
    </item>
</layer-list>
